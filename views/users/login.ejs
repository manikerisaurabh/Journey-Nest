<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <h1 class="col-6 offset-3">Login on JourneyNest</h1>
  <div class="col-6 offset-3">
    <form method="POST" action="/login">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          placeholder="Username"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success btn-lg offset-6 mt-3">Login</button>
    </form>
  </div>
</div>
